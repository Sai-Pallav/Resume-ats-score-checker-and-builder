<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        /* Professional Template */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 40px;
            color: #333;
            line-height: 1.6;
            background: #fff;
        }

        .header {
            text-align: left;
            border-bottom: 3px solid #1a5276;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 36px;
            color: #1a5276;
            margin: 0 0 10px 0;
            text-transform: uppercase;
            font-weight: 700;
        }

        .contact-info {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            font-size: 14px;
            color: #555;
        }

        .contact-info span::after {
            content: " | ";
            margin-left: 15px;
            color: #ccc;
        }
        
        .contact-info span:last-child::after {
            content: "";
        }

        h2 {
            font-size: 20px;
            color: #1a5276;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            margin: 25px 0 15px;
            text-transform: uppercase;
        }

        .entry {
            margin-bottom: 20px;
        }

        .entry-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }

        .entry-title {
            font-weight: bold;
            font-size: 16px;
        }

        .entry-date {
            color: #666;
            font-size: 14px;
            font-style: italic;
        }

        .entry-subtitle {
            font-weight: 600;
            color: #444;
            font-size: 15px;
            margin-bottom: 5px;
        }

        ul {
            margin: 5px 0 0 0;
            padding-left: 20px;
        }

        li {
            margin-bottom: 4px;
            font-size: 14px;
        }

        .summary {
            font-size: 14px;
            margin-bottom: 20px;
        }

        .skill-tag {
            display: inline-block;
            color: #333;
            font-size: 14px;
        }
        
        .skill-tag::after {
            content: ", ";
        }
        .skill-tag:last-child::after {
            content: "";
        }
    </style>
</head>

<body>
    <div class="header">
        <h1>{{contactInfo.fullName}}</h1>
        <div class="contact-info">
            {{#if contactInfo.email}}<span>{{contactInfo.email}}</span>{{/if}}
            {{#if contactInfo.phone}}<span>{{contactInfo.phone}}</span>{{/if}}
            {{#if contactInfo.location}}<span>{{contactInfo.location}}</span>{{/if}}
            {{#if contactInfo.linkedin}}<span>{{contactInfo.linkedin}}</span>{{/if}}
        </div>
    </div>

    {{#if summary}}
    <h2>Professional Summary</h2>
    <div class="summary">{{summary}}</div>
    {{/if}}

    {{#each sections}}
    <h2>{{type}}</h2>

    {{#if (eq type "experience")}}
    {{#each data}}
    <div class="entry">
        <div class="entry-header">
            <span class="entry-title">{{title}}</span>
            <span class="entry-date">{{startDate}} — {{#if isCurrent}}Present{{else}}{{endDate}}{{/if}}</span>
        </div>
        <div class="entry-subtitle">{{company}} {{#if location}}• {{location}}{{/if}}</div>
        <ul>
            {{#each bullets}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    {{/each}}
    {{/if}}

    {{#if (eq type "education")}}
    {{#each data}}
    <div class="entry">
        <div class="entry-header">
            <span class="entry-title">{{institution}}</span>
            <span class="entry-date">{{startDate}} — {{endDate}}</span>
        </div>
        <div class="entry-subtitle">{{degree}} {{#if field}}in {{field}}{{/if}}</div>
        {{#if gpa}}<div>GPA: {{gpa}}</div>{{/if}}
    </div>
    {{/each}}
    {{/if}}

    {{#if (eq type "skills")}}
    {{#each data.categories}}
    <div style="margin-bottom: 10px;">
        <span style="font-weight: bold; font-size: 14px;">{{name}}: </span>
        {{#each items}}
        <span class="skill-tag">{{this}}</span>
        {{/each}}
    </div>
    {{/each}}
    {{/if}}

    {{#if (eq type "projects")}}
    {{#each data}}
    <div class="entry">
        <div class="entry-header">
            <span class="entry-title">{{name}}</span>
            {{#if url}}<span class="entry-date">{{url}}</span>{{/if}}
        </div>
        <p style="font-size: 14px; margin: 5px 0;">{{description}}</p>
        <ul>
            {{#each highlights}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    {{/each}}
    {{/if}}
    {{/each}}
</body>
</html>
