<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    /* Classic Template */
    body { font-family: 'Georgia', serif; margin: 0; padding: 40px; color: #333; line-height: 1.4; }
    h1 { font-size: 28px; margin-bottom: 4px; border-bottom: 2px solid #333; padding-bottom: 4px; text-transform: uppercase; text-align: center; }
    h2 { font-size: 16px; border-bottom: 1px solid #333; padding-bottom: 4px; margin-top: 20px; text-transform: uppercase; }
    h3 { font-size: 14px; margin: 8px 0 4px; }
    .contact { font-size: 13px; color: #666; text-align: center; margin-bottom: 24px; }
    .entry { margin-bottom: 12px; }
    .entry-header { display: flex; justify-content: space-between; align-items: baseline; }
    .entry-title { font-weight: bold; }
    .entry-subtitle { font-style: italic; font-size: 13px; margin: 2px 0; }
    .entry-date { font-size: 13px; color: #555; }
    ul { margin: 4px 0 12px; padding-left: 20px; font-size: 13px; }
    p { font-size: 13px; margin: 8px 0; }
  </style>
</head>
<body>
  <h1>{{contactInfo.fullName}}</h1>
  <div class="contact">
    {{#if contactInfo.email}}{{contactInfo.email}} | {{/if}}
    {{#if contactInfo.phone}}{{contactInfo.phone}} | {{/if}}
    {{#if contactInfo.location}}{{contactInfo.location}} | {{/if}}
    {{#if contactInfo.linkedin}}{{contactInfo.linkedin}}{{/if}}
  </div>

  {{#if summary}}
  <h2>Summary</h2>
  <p>{{summary}}</p>
  {{/if}}

  {{#each sections}}
    <h2>{{type}}</h2>
    {{#if (eq type "experience")}}
        {{#each data}}
            <div class="entry">
                <div class="entry-header">
                    <span class="entry-title">{{title}} at {{company}}</span>
                    <span class="entry-date">{{startDate}} - {{#if isCurrent}}Present{{else}}{{endDate}}{{/if}}</span>
                </div>
                {{#if location}}<div class="entry-subtitle">{{location}}</div>{{/if}}
                <ul>
                    {{#each bullets}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/each}}
    {{/if}}
    {{#if (eq type "education")}}
        {{#each data}}
            <div class="entry">
                <div class="entry-header">
                    <span class="entry-title">{{institution}}</span>
                    <span class="entry-date">{{startDate}} - {{endDate}}</span>
                </div>
                <div class="entry-subtitle">{{degree}} in {{field}} {{#if gpa}}(GPA: {{gpa}}){{/if}}</div>
                {{#if highlights.length}}
                <ul>
                    {{#each highlights}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                {{/if}}
            </div>
        {{/each}}
    {{/if}}
    {{#if (eq type "skills")}}
        {{#each data.categories}}
            <div class="entry">
                <span class="entry-title">{{name}}:</span>
                <span>{{join items ", "}}</span>
            </div>
        {{/each}}
    {{/if}}
    {{#if (eq type "projects")}}
        {{#each data}}
            <div class="entry">
                <div class="entry-header">
                    <span class="entry-title">{{name}}</span>
                    {{#if url}}<span class="entry-date">{{url}}</span>{{/if}}
                </div>
                <p>{{description}}</p>
                <ul>
                    <li><strong>Technologies:</strong> {{join technologies ", "}}</li>
                    {{#each highlights}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/each}}
    {{/if}}
    {{#if (eq type "certifications")}}
        {{#each data}}
            <div class="entry">
                <div class="entry-header">
                    <span class="entry-title">{{name}}</span>
                    <span class="entry-date">{{issueDate}}</span>
                </div>
                <div class="entry-subtitle">{{issuer}}</div>
            </div>
        {{/each}}
    {{/if}}
  {{/each}}
</body>
</html>
