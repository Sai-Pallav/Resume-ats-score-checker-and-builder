<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <style>
        /* Academic Template */
        body {
            font-family: 'Cambria', 'Georgia', serif;
            margin: 0;
            padding: 30px 40px;
            color: #000;
            line-height: 1.4;
            background: #fff;
            font-size: 14px;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .header h1 {
            font-size: 28px;
            color: #000;
            margin: 0 0 8px 0;
            font-weight: bold;
        }

        .contact-info {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 10px;
            font-size: 13px;
            color: #333;
        }

        .contact-info span::after {
            content: " | ";
            margin-left: 10px;
            color: #999;
        }

        .contact-info span:last-child::after {
            content: "";
        }

        h2 {
            font-size: 16px;
            color: #000;
            border-bottom: 1px solid #000;
            margin: 20px 0 10px;
            text-transform: uppercase;
            font-weight: bold;
        }

        .entry {
            margin-bottom: 12px;
        }

        .entry-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }

        .entry-title {
            font-weight: bold;
            font-size: 15px;
            color: #000;
        }

        .entry-date {
            color: #000;
            font-size: 13px;
        }

        .entry-subtitle {
            font-style: italic;
            color: #333;
            font-size: 14px;
            margin-bottom: 3px;
        }

        ul {
            margin: 4px 0 0 0;
            padding-left: 25px;
        }

        li {
            margin-bottom: 3px;
            font-size: 13px;
        }

        .summary {
            font-size: 13px;
            margin-bottom: 15px;
            text-align: justify;
        }

        .skill-cat {
            font-weight: bold;
            font-size: 13px;
        }

        .skill-items {
            font-size: 13px;
        }

        .skills-container {
            margin-bottom: 6px;
        }
    </style>
</head>

<body>
    <div class="header">
        <h1>{{contactInfo.fullName}}</h1>
        <div class="contact-info">
            {{#if contactInfo.email}}<span>{{contactInfo.email}}</span>{{/if}}
            {{#if contactInfo.phone}}<span>{{contactInfo.phone}}</span>{{/if}}
            {{#if contactInfo.location}}<span>{{contactInfo.location}}</span>{{/if}}
            {{#if contactInfo.linkedin}}<span>{{contactInfo.linkedin}}</span>{{/if}}
        </div>
    </div>

    {{#if summary}}
    <h2>Summary</h2>
    <div class="summary">{{summary}}</div>
    {{/if}}

    {{#each sections}}

    {{#if (eq type "education")}}
    <h2>Education</h2>
    {{#each data}}
    <div class="entry">
        <div class="entry-header">
            <span class="entry-title">{{institution}}</span>
            <span class="entry-date">{{startDate}} — {{endDate}}</span>
        </div>
        <div class="entry-subtitle">{{degree}} {{#if field}}in {{field}}{{/if}}</div>
        {{#if gpa}}<div style="font-size: 13px;">GPA: {{gpa}}</div>{{/if}}
    </div>
    {{/each}}
    {{/if}}

    {{#if (eq type "experience")}}
    <h2>Experience</h2>
    {{#each data}}
    <div class="entry">
        <div class="entry-header">
            <span class="entry-title">{{title}}, {{company}}</span>
            <span class="entry-date">{{startDate}} — {{#if isCurrent}}Present{{else}}{{endDate}}{{/if}}</span>
        </div>
        {{#if location}}<div class="entry-subtitle">{{location}}</div>{{/if}}
        <ul>
            {{#each bullets}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    {{/each}}
    {{/if}}

    {{#if (eq type "projects")}}
    <h2>Projects & Research</h2>
    {{#each data}}
    <div class="entry">
        <div class="entry-header">
            <span class="entry-title">{{name}}</span>
            {{#if url}}<span class="entry-date">{{url}}</span>{{/if}}
        </div>
        <p style="font-size: 13px; margin: 3px 0 4px;">{{description}}</p>
        <ul>
            {{#each highlights}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    {{/each}}
    {{/if}}

    {{#if (eq type "skills")}}
    <h2>Skills</h2>
    {{#each data.categories}}
    <div class="skills-container">
        <span class="skill-cat">{{name}}:</span>
        <span class="skill-items">{{#each items}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</span>
    </div>
    {{/each}}
    {{/if}}

    {{/each}}
</body>

</html>